<!DOCTYPE html>
<html lang="en" style="background: black">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ site.title }}</title>
    <!-- Set base href for relative URLs -->
    <base href="{{ site.baseUrl }}" />
    <link rel="stylesheet" href="assets/css/tuicss.min.css" />
    <style>
      .mobile-message {
        display: none;
        height: 100vh;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding: 2rem;
      }
      
      .mobile-message.show {
        display: flex;
      }
      
      .desktop-content.hide {
        display: none;
      }
    </style>
  </head>
  <body class="tui-bg-blue-black">
    <!-- Mobile message -->
    <div id="mobile-message" class="mobile-message">
      <div class="tui-panel red-168 yellow-255-text center-align" style="padding: 2rem; max-width: 500px;">
        <h1 style="margin-bottom: 1rem;">ACCESS DENIED</h1>
        <p style="font-size: 1.5rem; text-align: center; margin: 0;">
          This should be read from the desktop
        </p>
      </div>
    </div>

    <!-- Desktop content -->
    <div id="desktop-content" class="desktop-content">
      <div class="tui-screen-1024-768 bordered white-168 centered">
        <div
          class="tui-panel cyan-168 full-width black-255-text tui-no-shadow center"
        >
          {{ site.title }}
        </div>

        {% include "partials/header.njk" %}

        <div class="tui-tab-content tui-content" style="display: block">
          <div class="tui-window full-width tui-no-shadow">
            <fieldset class="tui-fieldset" style="height: 768px; overflow-y: auto;">
              <section class="main-content">
                <!-- <br /> -->
                {{ content | safe }}
              </section>
            </fieldset>
          </div>
        </div>

        {% include "partials/footer.njk" %}
      </div>
    </div>

    <script>
      // Mobile detection function
      function isMobile() {
        const userAgent = navigator.userAgent || navigator.vendor || window.opera;
        
        // Check for mobile devices
        const mobileRegex = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i;
        const isMobileDevice = mobileRegex.test(userAgent);
        
        // Also check screen size as a fallback
        const isSmallScreen = window.innerWidth <= 768;
        
        return isMobileDevice || isSmallScreen;
      }

      // Show/hide content based on device type
      function handleDeviceDetection() {
        const mobileMessage = document.getElementById('mobile-message');
        const desktopContent = document.getElementById('desktop-content');
        
        if (isMobile()) {
          mobileMessage.classList.add('show');
          desktopContent.classList.add('hide');
        } else {
          mobileMessage.classList.remove('show');
          desktopContent.classList.remove('hide');
        }
      }

      // Run on page load
      document.addEventListener('DOMContentLoaded', handleDeviceDetection);
      
      // Run on window resize to handle orientation changes
      window.addEventListener('resize', handleDeviceDetection);
    </script>
  </body>
</html>
